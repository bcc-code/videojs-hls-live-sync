{
	"compilerOptions": {
		"noImplicitAny": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"strict": true,
		"target": "es2017",
		"module": "esnext",
		"declaration": true,
		"lib": ["es5", "es2015", "es2016", "es2017", "es2018", "es2019", "es2020", "esnext", "dom"],
		"alwaysStrict": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true
	},
	"include": ["src/**/*.ts"]
}
